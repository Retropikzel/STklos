(import (stklos gtklos))

(define-macro (do* sexpr)
  `(begin
     (sleep 10)
     (write ',sexpr)
     (newline)
     ,sexpr))


(define (event-loop)
  (thread-start!
   (make-thread (lambda ()
                  (let Loop ()
                    (%flush-gtk-events)
                    (sleep 20)
                    (Loop))))))

(event-loop)
