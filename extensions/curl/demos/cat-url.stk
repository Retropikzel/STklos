(import (stklos curl))

(define (main args)
  (when (= (length args) 1)
    (die (format "Usage: ~A url1 ..." (program-name))))
  (let ((handle (curl-init)))
    (for-each (lambda (url)
                (curl-set-option handle :url url)           ; URL to use
                (curl-set-option handle :followlocation 1)  ; Do redirections
                (curl-perform handle))
              (cdr args))
    (curl-cleanup handle)))

