(let ()
  (define ((greet/prefix prefix) suffix)
    (string-append prefix " " suffix))

  (let ((greet (greet/prefix "Hello")))
    (test "SRFI-219.1"
          "Hello there!"
          (greet "there!"))))

(let ()
  (define ((append-to . a) . b)
    (apply append (append a b)))

  (test "SRFI-219.2"
        '()
        ((append-to '()) '()))
  (test "SRFI-219.3"
        '(1 2 3 4 5 6 7 8)
        ((append-to '(1 2) '(3 4)) '(5 6) '(7 8))))

(let ()
  (define (((jenga a b) c d))
    (list a b c d))

  (test "SRFI-219.4"
        '(1 2 3 4)
        (((jenga 1 2) 3 4))))
