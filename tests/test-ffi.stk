(require "test")

(test-section "FFI")

;;; RINDEX
(define-external %rindex (:string :int)
  :entry-name "strrchr"
  :return-type :string)

(define (rindex str char)
  (%rindex str (char->integer char)))

;;; STRLEN
(define-external strlen(:string)
  :return-type :int)


(test "rindex.1"
      "/d"
      (rindex "/a/b/c/d" #\/))


(test "rindex.2"
      (void)
      (rindex "/a/b/c/d" #\A))

(test "strlen.1"
      0
      (strlen ""))

(test "strlen.2"
      5
      (strlen "abcde"))

;;; COS

(define-external cos(:double)
  :return-type :double)

;; check that we actually shadowed the original 'cos' in Scheme:
(test "cos.1"
      #f
      (eq? cos (in-module SCHEME cos)))

(test "cos.2"
      #t
      (= (cos 1.5)
         ((in-module SCHEME cos) 1.5)))

(test-section-end)
